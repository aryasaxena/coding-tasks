#include <iostream>
using namespace std;
int main() {
            int integertype;
            char chartype;
            float floattype;
            double doubletype;
            
            cout<<"size of char:"<<
            sizeof(chartype)<<"/n";
            
            cout<<"size of int:"<<
            sizeof(integertype)<<"/n";
            
            cout<<"size of float:"<<
            sizeof(floattype)<<"/n";
            
            cout<<"size of double:"<<
            sizeof(doubletype)<<"/n";
            
            return 0;
            
            }
           
